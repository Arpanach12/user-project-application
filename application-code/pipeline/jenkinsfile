node {

  stage('Git-CheckOut') {
   git 'https://github.com/devops311/user-project-application.git'
  }
    
 def project_path="application-code/code/userproject"
 
 dir(project_path) {
    
  stage('Maven-Clean') {
   sh label: '', script: 'mvn clean'
  }
    
 stage('Maven-Compile') {
   sh label: '', script: 'mvn compile'
  }
  
stage('Sonar Analysis'){
        withSonarQubeEnv('SonarQube'){
         sh 'mvn sonar:sonar'
        }
 }  
 
   stage('Maven-Test') {
   sh label: '', script: 'mvn test'
  }
  
   stage('Maven-Install') {
   sh label: '', script: 'mvn install'
  }
  
	
 }
 stage('Docker Deployment'){
    
        dir("/var/lib/jenkins/workspace/userproject/application-code/"){
        sh 'docker build -t userproject:$BUILD_NUMBER .'
        sh 'docker run --privileged  -d -p 8080:8080 --name userproject$BUILD_NUMBER userprojectimage:$BUILD_NUMBER'
    }
    }
}
